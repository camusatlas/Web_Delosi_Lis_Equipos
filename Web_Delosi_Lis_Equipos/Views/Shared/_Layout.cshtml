<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <title>Equipos Delosi</title>
    <link href="~/Content/StylePag.css" rel="stylesheet" />

</head>
<body id="body">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container-fluid">
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-4">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">
                            Busqueda de Servidores
                        </a>
                        <ul class="dropdown-menu bg-secondary" aria-labelledby="navbarDropdown">
                            <li>@Html.ActionLink("Listado de Serviodres", "IndexBuscarServidor1","EquiposServidor", new { area = "" }, new { @class = "nav-link dropdown-item" })</li>
                            <li>@Html.ActionLink("Caracteristicas del servidor", "IndexBuscarServidor2", "EquiposServidor", new { area = "" }, new { @class = "nav-link dropdown-item" })</li>
                            <li>@Html.ActionLink("Datos de La Tienda", "IndexBuscarServidor3", "EquiposServidor", new { area = "" }, new { @class = "nav-link dropdown-item" })</li>
                            <li>@Html.ActionLink("Tecnicos Asignados", "IndexBuscarServidor4", "EquiposServidor", new { area = "" }, new { @class = "nav-link dropdown-item" })</li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">
                            Busqueda de Punto de Venta
                        </a> 
                        <ul class="dropdown-menu bg-secondary" aria-labelledby="navbarDropdown">
                            <li>@Html.ActionLink("Punto de Venta", "IndexBuscarPuntoVenta","Punto_Venta", new { area = "" }, new { @class = "nav-link dropdown-item text-center" })</li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">
                            Busqueda de DKS
                        </a>
                        <ul class="dropdown-menu bg-secondary" aria-labelledby="navbarDropdown">
                            <li>@Html.ActionLink("KDS", "IndexBuscarKDS","EquiposKDS", new { area = "" }, new { @class = "nav-link dropdown-item text-center" })</li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">
                            Opciones
                        </a>
                        <ul class="dropdown-menu bg-secondary" aria-labelledby="navbarDropdown">
                            <li>@Html.ActionLink("Salir", "CerrarSesion","Usuarios", new { area = "" }, new { @class = "nav-link dropdown-item text-center" })</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <script src="./js/bootstrp.bundle.min.js"></script>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <p></p>
        </footer>
    </div>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>
